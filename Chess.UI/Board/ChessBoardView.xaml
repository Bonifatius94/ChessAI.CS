<UserControl x:Class="Chess.UI.Board.ChessBoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:field="clr-namespace:Chess.UI.Field"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="480" Width="480">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- row 8 -->
        <field:ChessFieldView DataContext="{Binding Field_A8}" Grid.Row="0" Grid.Column="1" />
        <field:ChessFieldView DataContext="{Binding Field_B8}" Grid.Row="0" Grid.Column="2" />
        <field:ChessFieldView DataContext="{Binding Field_C8}" Grid.Row="0" Grid.Column="3" />
        <field:ChessFieldView DataContext="{Binding Field_D8}" Grid.Row="0" Grid.Column="4" />
        <field:ChessFieldView DataContext="{Binding Field_E8}" Grid.Row="0" Grid.Column="5" />
        <field:ChessFieldView DataContext="{Binding Field_F8}" Grid.Row="0" Grid.Column="6" />
        <field:ChessFieldView DataContext="{Binding Field_G8}" Grid.Row="0" Grid.Column="7" />
        <field:ChessFieldView DataContext="{Binding Field_H8}" Grid.Row="0" Grid.Column="8" />

        <!-- row 7 -->
        <field:ChessFieldView DataContext="{Binding Field_A7}" Grid.Row="1" Grid.Column="1" />
        <field:ChessFieldView DataContext="{Binding Field_B7}" Grid.Row="1" Grid.Column="2" />
        <field:ChessFieldView DataContext="{Binding Field_C7}" Grid.Row="1" Grid.Column="3" />
        <field:ChessFieldView DataContext="{Binding Field_D7}" Grid.Row="1" Grid.Column="4" />
        <field:ChessFieldView DataContext="{Binding Field_E7}" Grid.Row="1" Grid.Column="5" />
        <field:ChessFieldView DataContext="{Binding Field_F7}" Grid.Row="1" Grid.Column="6" />
        <field:ChessFieldView DataContext="{Binding Field_G7}" Grid.Row="1" Grid.Column="7" />
        <field:ChessFieldView DataContext="{Binding Field_H7}" Grid.Row="1" Grid.Column="8" />

        <!-- row 6 -->
        <field:ChessFieldView DataContext="{Binding Field_A6}" Grid.Row="2" Grid.Column="1" />
        <field:ChessFieldView DataContext="{Binding Field_B6}" Grid.Row="2" Grid.Column="2" />
        <field:ChessFieldView DataContext="{Binding Field_C6}" Grid.Row="2" Grid.Column="3" />
        <field:ChessFieldView DataContext="{Binding Field_D6}" Grid.Row="2" Grid.Column="4" />
        <field:ChessFieldView DataContext="{Binding Field_E6}" Grid.Row="2" Grid.Column="5" />
        <field:ChessFieldView DataContext="{Binding Field_F6}" Grid.Row="2" Grid.Column="6" />
        <field:ChessFieldView DataContext="{Binding Field_G6}" Grid.Row="2" Grid.Column="7" />
        <field:ChessFieldView DataContext="{Binding Field_H6}" Grid.Row="2" Grid.Column="8" />

        <!-- row 5 -->
        <field:ChessFieldView DataContext="{Binding Field_A5}" Grid.Row="3" Grid.Column="1" />
        <field:ChessFieldView DataContext="{Binding Field_B5}" Grid.Row="3" Grid.Column="2" />
        <field:ChessFieldView DataContext="{Binding Field_C5}" Grid.Row="3" Grid.Column="3" />
        <field:ChessFieldView DataContext="{Binding Field_D5}" Grid.Row="3" Grid.Column="4" />
        <field:ChessFieldView DataContext="{Binding Field_E5}" Grid.Row="3" Grid.Column="5" />
        <field:ChessFieldView DataContext="{Binding Field_F5}" Grid.Row="3" Grid.Column="6" />
        <field:ChessFieldView DataContext="{Binding Field_G5}" Grid.Row="3" Grid.Column="7" />
        <field:ChessFieldView DataContext="{Binding Field_H5}" Grid.Row="3" Grid.Column="8" />

